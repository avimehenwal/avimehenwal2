digraph mindmap {
  bgcolor="transparent"
  label = "Mindmap"

  node [fontsize=20 style=filled colorscheme=set312]
  edge [fontsize=15 style=tapered penwidth=15 arrowhead=none ]

  root [ fontsize=30 fillcolor="4:6" shape=box style="rounded,filled" ]
  a [fillcolor=1]
  b [fillcolor=2]
  c [fillcolor=3]
  d [fillcolor=5]
  e [fillcolor=6]

  root -> {a b c d}
  root -> e [label="edge label"]
}
