{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "dot -> svg",
            "type": "shell",
            "command": "dot",
            "args": [
                "-Tsvg",
                "${file}",
                ">",
                "${workspaceFolder}/.vuepress/public/${fileBasenameNoExtension}.svg"
            ]
        }
    ]
}